{
	"info": {
		"_postman_id": "data-service-collection",
		"name": "Data Service API",
		"description": "Staff and group management API with Redis caching",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/health",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "health"]
						}
					}
				}
			]
		},
		{
			"name": "Batch Import",
			"item": [
				{
					"name": "Batch Import Staff from sample-data/staff.json",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/batch/staff",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "batch", "staff"]
						},
						"description": "Import staff from sample-data/staff.json file"
					}
				},
				{
					"name": "Batch Import Groups from sample-data/groups.json",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/batch/groups",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "batch", "groups"]
						},
						"description": "Import groups from sample-data/groups.json file"
					}
				}
			]
		},
		{
			"name": "Staff",
			"item": [
				{
					"name": "Create Staff",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"position\": \"Software Engineer\",\n  \"status\": \"Active\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/staff",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "staff"]
						}
					}
				},
				{
					"name": "List Staff",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/staff?page=1&page_size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "staff"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "page_size",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Staff by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/staff/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "staff", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{staff_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Update Staff",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe Updated\",\n  \"position\": \"Senior Software Engineer\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/staff/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "staff", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{staff_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Delete Staff",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/staff/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "staff", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{staff_id}}"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Groups",
			"item": [
				{
					"name": "Create Group",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Engineering Department\",\n  \"parent_id\": null\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups"]
						}
					}
				},
				{
					"name": "List Groups",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups?page=1&page_size=10",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "page_size",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Group by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{group_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Update Group",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Engineering Department Updated\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{group_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Delete Group",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "{{group_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Get Resolved Members (Hierarchical)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:id/resolved-members",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":id", "resolved-members"],
							"variable": [
								{
									"key": "id",
									"value": "{{group_id}}"
								}
							]
						},
						"description": "Get all members including members of nested subgroups"
					}
				}
			]
		},
		{
			"name": "Memberships",
			"item": [
				{
					"name": "Add Member to Group",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"staff_id\": \"{{staff_id}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:group_id/members",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":group_id", "members"],
							"variable": [
								{
									"key": "group_id",
									"value": "{{group_id}}"
								}
							]
						}
					}
				},
				{
					"name": "Get Group Members",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:group_id/members",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":group_id", "members"],
							"variable": [
								{
									"key": "group_id",
									"value": "{{group_id}}"
								}
							]
						},
						"description": "Get direct members only (not hierarchical)"
					}
				},
				{
					"name": "Remove Member from Group",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/groups/:group_id/members/:staff_id",
							"host": ["{{baseUrl}}"],
							"path": ["api", "v1", "groups", ":group_id", "members", ":staff_id"],
							"variable": [
								{
									"key": "group_id",
									"value": "{{group_id}}"
								},
								{
									"key": "staff_id",
									"value": "{{staff_id}}"
								}
							]
						}
					}
				}
			]
		}
	]
}
